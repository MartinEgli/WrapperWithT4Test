Func<Type, string> writeType = T4Helpers.WriteType;
Func<Type, string> writeTypeAttributes = T4Helpers.WriteTypeAttributes;
Func<FieldInfo, string> writeFieldAttributes =  T4Helpers.WriteFieldAttributes;
